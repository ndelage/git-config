[color]
  branch = auto
  diff   = auto
  status = auto

[color "branch"]
  current = yellow reverse
  local   = yellow
  remote  = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old  = red bold
  new  = green bold

[color "status"]
  added     = green
  changed   = yellow
  untracked = cyan

[repack]
  usedeltabaseoffset = true

[alias]
  st   = status -sb
  lg   = log --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --graph --abbrev-commit --date=relative

[push]
  default = tracking

[core]
  editor = /usr/bin/subl
